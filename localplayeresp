-- Variables
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local highlight = Instance.new("Highlight")
local usernameLabel = Instance.new("TextLabel")

-- Set up the Highlight
highlight.Parent = character
highlight.FillColor = Color3.new(1, 0, 0) -- Starting color (red)
highlight.OutlineColor = Color3.new(0, 0, 0) -- Outline color (black)

-- Set up the TextLabel
usernameLabel.Parent = character:WaitForChild("Head")
usernameLabel.Size = UDim2.new(1, 0, 0, 50) -- Adjust the size as needed
usernameLabel.Position = UDim2.new(0, 0, -1.5, 0) -- Position above the head
usernameLabel.BackgroundTransparency = 1 -- Make background transparent
usernameLabel.TextColor3 = Color3.new(1, 1, 1) -- Initial text color (white)
usernameLabel.TextScaled = true -- Scale text to fit the label
usernameLabel.Text = player.Name -- Set text to the player's username

-- Function to change color
local function changeColor()
    while true do
        for i = 0, 1, 0.01 do
            highlight.FillColor = Color3.fromRGB(math.floor(255 * i), math.floor(255 * (1 - i)), 0) -- Transition from red to green
            usernameLabel.TextColor3 = Color3.fromRGB(math.floor(255 * i), math.floor(255 * (1 - i)), 0) -- Update text color
            wait(0.05)
        end
        for i = 0, 1, 0.01 do
            highlight.FillColor = Color3.fromRGB(math.floor(255 * (1 - i)), math.floor(255 * i), 0) -- Transition from green to yellow
            usernameLabel.TextColor3 = Color3.fromRGB(math.floor(255 * (1 - i)), math.floor(255 * i), 0) -- Update text color
            wait(0.05)
        end
        for i = 0, 1, 0.01 do
            highlight.FillColor = Color3.fromRGB(0, math.floor(255 * (1 - i)), math.floor(255 * i)) -- Transition from yellow to blue
            usernameLabel.TextColor3 = Color3.fromRGB(0, math.floor(255 * (1 - i)), math.floor(255 * i)) -- Update text color
            wait(0.05)
        end
        for i = 0, 1, 0.01 do
            highlight.FillColor = Color3.fromRGB(0, math.floor(255 * i), math.floor(255 * (1 - i))) -- Transition from blue to red
            usernameLabel.TextColor3 = Color3.fromRGB(0, math.floor(255 * i), math.floor(255 * (1 - i))) -- Update text color
            wait(0.05)
        end
    end
end

-- Start changing colors
changeColor()
